@Model Book

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name"/>
    <h2>@Model.Name</h2>
    <p>@Model.Author</p>
    <p>@Model.YearCreated</p>
    <p>@Model.Price грн</p>
    <a class="btn btn-outline-secondary btn-lg">Детальніше</a>
    <a class="btn btn-success btn-lg" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">Додати в кошик</a>
</div>