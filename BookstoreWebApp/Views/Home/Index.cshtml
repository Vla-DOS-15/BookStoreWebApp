@model IEnumerable<BookStoreWebApp.Models.Book>
@{
    ViewData["Title"] = "Каталог товарів";
}

<h3>Товари інтернет магазину BookStore</h3>
<br />

<table>
    <thead> 
        <tr style="border: 2px;">
            <td class="product">Назва</td>
            <td>Автор</td>
            <td>Рік написання</td>
            <td>Ціна</td>
            <td>Фото</td>
            <td>&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var book in ViewBag.Books)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.YearCreated</td>
                    <td>@book.Price</td>
                    <td>@book.Img</td>
                    <td><a href="~/Home/Buy/@book.Id">Купити</a></td>
                </tr>
            }
        }
    </tbody>
</table>


